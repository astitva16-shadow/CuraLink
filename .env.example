# CuraLink Environment Variables Configuration
# Copy this file to .env for local development or set these in your deployment platform

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Production - Leave empty for SQLite in development)
# DATABASE_URL will override default SQLite database
# Format: postgresql://user:password@host:port/database
# DATABASE_URL=

# Superuser Creation (Optional - for automated deployment)
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_PASSWORD=secure-password-here
# DJANGO_SUPERUSER_EMAIL=admin@curalink.com

# CORS Settings (Production)
# Comma-separated list of allowed origins
# CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security (Production only - automatically enabled when DEBUG=False)
# These settings are automatically configured in production
# - SECURE_SSL_REDIRECT=True
# - SESSION_COOKIE_SECURE=True
# - CSRF_COOKIE_SECURE=True
# - SECURE_HSTS_SECONDS=31536000

# Generate a secure SECRET_KEY using:
# python -c "import secrets; print(secrets.token_urlsafe(50))"
